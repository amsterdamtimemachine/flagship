{
  "name": "ATM flagship prototype",
  "private": true,
  "engines": {
    "bun": "latest"
  },
  "workspaces": [
    "frontend",
    "backend/server",
    "backend/preprocessor",
    "packages/shared-types"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\" \"bun run dev:packages/shared-types\"",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend/server": "cd backend/server/ && bun run --watch src/server.ts",
    "dev:packages/shared-types": "cd packages/shared-types && bun run dev-w-yalc" 
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
